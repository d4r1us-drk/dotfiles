# Input settings
input {
    type:touchpad {
        dwt disabled
        tap enabled
        natural_scroll enabled
        middle_emulation enabled
    }

    type:pointer {
        accel_profile adaptive
        dwtp disabled
        pointer_accel 0.5
    }

    type:keyboard {
        xkb_layout us,es
        xkb_options grp:shift_caps_toggle
    }
}

# Cursor settings
seat * hide_cursor 10000
mouse_warping container
focus_follows_mouse yes
