#!/usr/bin/env bash

# ***This script was made by Clay Gomera (Drake)***
#  - Description: A simple power menu dmenu script
#  - Dependencies: dmenu (Everything else can be changed)

## OPTIONS ##
option1="Ôê¶ Logout"
option2="ÔÄû Reboot"
option3="ÔÄë Power off"
option4="üí§ Suspend"
option5="üîílock"
option6="‚ùåCancel"

## OPTIONS ARRAY ##
options="$option1\n$option2\n$option3\n$option4\n$option5\n$option6"

## MAIN ACTION COMMAND ##
action=$(echo -e "$options" | dmenu -b -i -p "ÔÄë ")
case "$action" in
    $option1*)
        whoami | xargs -I % sh -c 'pkill -KILL -u %';;
    $option2*)
        systemctl reboot;;
    $option3*)
        systemctl poweroff;;
    $option4*)
        betterlockscreen -l &
        sleep 2
        systemctl suspend;;
    $option5*)
        betterlockscreen -l;;
    $option6*)
        exit 0
esac
